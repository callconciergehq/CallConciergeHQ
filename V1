  <!-- Accessibility helpers + interactivity -->
  <script>
    // Current year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Mobile menu toggle
    (function(){
      const btn = document.getElementById('menuBtn');
      const menu = document.getElementById('mobileMenu');
      if(!btn || !menu) return;
      btn.addEventListener('click', () => {
        const isOpen = btn.getAttribute('aria-expanded') === 'true';
        btn.setAttribute('aria-expanded', String(!isOpen));
        menu.style.display = isOpen ? 'none' : 'flex';
        menu.setAttribute('aria-hidden', String(isOpen));
      });
    })();

    // Expandable panels (cards/plans/industries): hover on desktop, click-to-toggle on touch
    (function(){
      const isTouch = ('ontouchstart' in window) || navigator.maxTouchPoints > 0;
      // Add event listeners to all expandable items
      document.querySelectorAll('[data-expandable]').forEach(el => {
        const reveal = el.querySelector('.reveal');
        if(!reveal) return;
        el.addEventListener('focusin', ()=> {
          reveal.style.maxHeight = reveal.scrollHeight + 'px';
          reveal.setAttribute('aria-hidden','false');
          el.classList.add('group-open');
        });
        el.addEventListener('focusout', ()=> {
          reveal.style.maxHeight = null;
          reveal.setAttribute('aria-hidden','true');
          el.classList.remove('group-open');
        });
        if(isTouch){
          el.addEventListener('click', (e) => {
            const target = e.target;
            if(target.tagName === 'A' || target.closest('a')) return;
            const open = el.classList.toggle('group-open');
            if(open){
              reveal.style.maxHeight = reveal.scrollHeight + 'px';
              reveal.setAttribute('aria-hidden','false');
            } else {
              reveal.style.maxHeight = null;
              reveal.setAttribute('aria-hidden','true');
            }
          });
        }
      });

      // Pricing reveals
      document.querySelectorAll('[data-plan]').forEach(plan => {
        const reveal = plan.querySelector('.reveal');
        if(!reveal) return;
        plan.addEventListener('focusin', ()=> {
          reveal.style.maxHeight = reveal.scrollHeight + 'px';
          reveal.setAttribute('aria-hidden','false');
          plan.classList.add('group-open');
        });
        plan.addEventListener('focusout', ()=> {
          reveal.style.maxHeight = null;
          reveal.setAttribute('aria-hidden','true');
          plan.classList.remove('group-open');
        });
        if(isTouch){
          plan.addEventListener('click', (e) => {
            const t = e.target;
            if(t.tagName === 'A' || t.closest('a')) return;
            const open = plan.classList.toggle('group-open');
            if(open){
              reveal.style.maxHeight = reveal.scrollHeight + 'px';
              reveal.setAttribute('aria-hidden','false');
            } else {
              reveal.style.maxHeight = null;
              reveal.setAttribute('aria-hidden','true');
            }
          });
        }
      });

      // Industries reveal handling (touch)
      document.querySelectorAll('.industries [data-expandable]').forEach(el => {
        const reveal = el.querySelector('.reveal');
        if(!reveal) return;
        if(isTouch){
          el.addEventListener('click', (e) => {
            const open = el.classList.toggle('group-open');
            reveal.style.maxHeight = open ? reveal.scrollHeight + 'px' : null;
            reveal.setAttribute('aria-hidden', String(!open));
          });
        } else {
          el.addEventListener('focusin', ()=> { reveal.style.maxHeight = reveal.scrollHeight + 'px'; reveal.setAttribute('aria-hidden','false') });
          el.addEventListener('focusout', ()=> { reveal.style.maxHeight = null; reveal.setAttribute('aria-hidden','true') });
        }
      });
    })();

    // Smooth scrolling for in-page anchors
    (function(){
      document.querySelectorAll('a[href^="#"]').forEach(a=>{
        a.addEventListener('click', function(e){
          const href = this.getAttribute('href');
          if(href === '#' || href === '') return;
          const id = href.slice(1);
          const el = document.getElementById(id);
          if(el){
            e.preventDefault();
            el.scrollIntoView({behavior:'smooth', block:'start'});
            const menu = document.getElementById('mobileMenu');
            const btn = document.getElementById('menuBtn');
            if(menu && btn && btn.getAttribute('aria-expanded') === 'true'){
              btn.click();
            }
          }
        });
      });
    })();
  </script>
</body>
</html>
